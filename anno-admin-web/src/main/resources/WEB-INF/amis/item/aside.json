{
  "type": "container",
  "style": {
    "position": "static",
    "display": "block",
    "overflowY": "auto",
    "overflowX": "auto",
    "margin": "0"
  },
  "inputClassName": "no-border no-padder mt-1",
  "isFixedHeight": false,
  "isFixedWidth": false,
  "body": {
    "id": "aside-input-tree",
    "type": "input-tree",
    "name": "_cat",
    "searchable": true,
    "multiple": false,
    "cascade": false,
    "heightAuto": false,
    "virtualThreshold": 999999999999999999999,
    "inputClassName": "no-border no-padder mt-1",
    "selectFirst": true,
    "initiallyOpen": false,
    "showOutline": true,
    "inputOnly": true,
    "unfoldedLevel": 2,
    "source": {
      "url": "/system/anno/${treeClazz}/annoTrees",
      "method": "get"
    },
    "onEvent": {
      "change": {
        "actions": [
          {
            "actionType": "broadcast",
            "args": {
              "eventName": "broadcast_aside_change"
            },
            "data": {
              "_cat": "${_cat}"
            }
          }
        ]
      }
    }
  }
}